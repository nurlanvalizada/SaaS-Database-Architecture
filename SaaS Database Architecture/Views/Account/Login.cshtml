@model SaaS_Database_Architecture.Models.LoginModel

@{
    ViewBag.Title = "Hesaba giriş";
    Layout = "~/Views/Shared/_AccLayout.cshtml";
}
<div class="sign-in-form">
    <div class="sign-in-form-top">
        @*<p><span>Sign In with</span> your account</p>*@
    </div>


        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="signin-rit">
                <span class="checkbox1">
                    <label class="checkbox">
                        @Html.CheckBoxFor(p => p.RememberMe, new { @checked = false })Məni xatırla ?
                    </label>
                </span>
            </div>
                            
            <div class="log-input">
                <div class="log-input-left">

                    @Html.TextBoxFor(m => m.UserName, new { @class = "user", @value = "İstifadəçi Adı", @onfocus = "this.value = '';", @onblur = "if (this.value == '') {this.value = 'İstifadəçi Adı:';}" })

                </div>
            </div>
            <div class="log-input">
                <div class="log-input-left">
                    @Html.PasswordFor(m => m.Password, new { @class = "lock", @value = "Şifrə", @onfocus = "this.value = '';", @onblur = "if (this.value == '') {this.value = 'Şifrə:';}" })
                </div>
            </div>
            <input type="submit" value="Hesabınıza daxil olun">
                          
        }
    <div class="new_people">
        <h4>Yeni müştərilər üçün</h4>
        <p>
           Əgər müştəri hesabınız yoxdursa aşağıdakı keçid vasitəsi ilə qeydiyyatdan keçin..
        </p>
        @Html.ActionLink("Qeydiyyat!", "Register")
    </div>
</div>
